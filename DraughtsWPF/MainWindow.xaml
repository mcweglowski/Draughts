<Window x:Class="DraughtsWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DraughtsWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="485" Width="448">
    <Grid>
        <ToolBar HorizontalAlignment="Left" Height="29" VerticalAlignment="Top" Width="430">
            <Button x:Name="btnResetGame" Content="Reset" VerticalAlignment="Stretch" Width="75" Click="BtnResetGame_Click"/>
            <Label Name="lblCurrentCoordinates" Content="Row: X K: 9" Height="24" VerticalAlignment="Top" Width="193"/>
            <Label Name="lblActivePlayer" Content="Player" Height="24" VerticalAlignment="Top" Width="129"/>
        </ToolBar>
        <Canvas Name="canvas" HorizontalAlignment="Left" Height="400" Margin="10,34,0,0" VerticalAlignment="Top" Width="400"/>

    </Grid>
</Window>
